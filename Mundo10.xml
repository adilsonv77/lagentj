<agentej>

	<mundo>
		<qtdadeLin>8</qtdadeLin>
		<qtdadeCol>8</qtdadeCol>
		<explodir>true</explodir>
	</mundo>
	
	<agente>
		<x depende="pilar">1</x>
		<y depende="pilar">-1</y>
	</agente>
	
