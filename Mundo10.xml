	</objeto>

	<objeto class="br.udesc.lagentj.Parede">
		<x depende="pilar">2</x>
		<y depende="pilar">0</y>
	</objeto>

	<!-- abertura em cima -->
	<grupo>
		<objeto class="br.udesc.lagentj.Parede">
			<x depende="pilar">0</x>
			<y depende="pilar">-1</y>
